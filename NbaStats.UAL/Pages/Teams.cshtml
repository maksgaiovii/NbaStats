@page
@using NbaStats.BLL.Interfaces
@model NbaStats.UAL.Pages.Teams
@inject ITeamService TeamService

@{
    ViewData["Title"] = "Teams";
    var teams = (await TeamService.GetAllAsync()).ToList();
}
<div class="container mt-5">
    <div class="mb-4 text-center">
        <span class="header-title">Teams</span>
    </div>
    <div class="row">
        <div class="col-12 col-md-6">
            <ul class="list-group">
                @for (int i = 0; i < 15; i++)
                {
                    var team = teams[i];
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="/Team?teamId=@team.TeamId" class="fw-bold text-decoration-none">@team.Name</a>
                    </li>
                }
            </ul>
        </div>
        <div class="col-12 col-md-6">
            <ul class="list-group">
                @for (int i = 15; i < 30; i++)
                {
                    var team = teams[i];
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="/Team?teamId=@team.TeamId" class="fw-bold text-decoration-none">@team.Name</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
<style>
    body {
        background-color: #f8f9fa;
    }
    .container {
        max-width: 600px;
    }
    .header-title {
        font-weight: 600;
        font-size: 2rem;
        color: #343a40;
    }
    .list-group-item {
        font-size: 1.1rem;
    }
    .fw-bold {
        color: #0d6efd;
    }
    .fw-bold:hover {
        text-decoration: underline;
        color: #084298;
    }
</style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />