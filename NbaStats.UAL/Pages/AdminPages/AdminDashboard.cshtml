@page
@model NbaStats.UAL.Pages.AdminDashboard

@{
    Layout = null;
}

<!DOCTYPE html>

<!DOCTYPE html>
<html>
<head>
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }
        .dashboard-container {
            max-width: 600px;
            margin: 80px auto;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 16px rgba(0,0,0,0.08);
            padding: 40px 30px;
            text-align: center;
        }
        .dashboard-nav a {
            margin: 0 25px;
            font-size: 1.3em;
            color: #0d6efd;
            text-decoration: none;
            transition: color 0.2s;
        }
        .dashboard-nav a:hover {
            color: #0a58ca;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <h1 class="mb-4">Admin Dashboard</h1>
        <nav class="dashboard-nav mb-3">
            <a href="/AdminPages/AdminTeams">Teams</a>
            <a href="/AdminPages/AdminMatches">Matches</a>
            <a href="/AdminPages/AdminPlayers">Players</a>
        </nav>
    </div>
</body>
</html>