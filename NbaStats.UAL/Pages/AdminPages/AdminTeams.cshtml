@page
        @using NbaStats.BLL.Interfaces
        @model NbaStats.UAL.Pages.Teams
        @inject ITeamService TeamService
        
        @{
            ViewData["Title"] = "Teams";
            var teams = await TeamService.GetAllAsync();
            var firstColumnTeams = teams.Take(15).ToList();
            var secondColumnTeams = teams.Skip(15).Take(15).ToList();
        }
        <h2>Teams</h2>
        
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-6">
                    <div class="card shadow mb-4">
                        <div class="card-header bg-primary text-white">
                            <h4 class="mb-0">Teams 1-15</h4>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                @foreach (var team in firstColumnTeams)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <a href="/AdminPages/AdminTeam?teamId=@team.TeamId" class="text-decoration-none">@team.Name</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card shadow mb-4">
                        <div class="card-header bg-primary text-white">
                            <h4 class="mb-0">Teams 16-30</h4>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                @foreach (var team in secondColumnTeams)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <a href="/AdminPages/AdminTeam?teamId=@team.TeamId" class="text-decoration-none">@team.Name</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>