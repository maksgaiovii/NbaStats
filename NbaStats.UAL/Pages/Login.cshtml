@page
@model NbaStats.UAL.Pages.Login
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fa;
        }
        .login-container {
            max-width: 400px;
            margin: 80px auto;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 16px rgba(0,0,0,0.08);
            padding: 40px 30px;
        }
        .form-label {
            font-weight: 500;
        }
        .form-check-label {
            font-weight: 400;
        }
        .btn-primary {
            width: 100%;
        }
        .error-message {
            color: #dc3545;
            margin-top: 15px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2 class="mb-4 text-center">Sign In</h2>
        <form method="post">
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" />
            </div>
            <div class="mb-3 form-check">
                <input asp-for="Input.RememberMe" type="checkbox" class="form-check-input" id="rememberMeCheck" />
                <label asp-for="Input.RememberMe" class="form-check-label" for="rememberMeCheck">Remember me?</label>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        @if (Model.ErrorMessage != null)
        {
            <div class="error-message">@Model.ErrorMessage</div>
        }
    </div>
</body>
</html>